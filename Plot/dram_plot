set multiplot layout 2,2

unset key
set key at graph 1,screen 1 center center maxrows 1


set xtics (1,5,10,15,20,30,40)
set ylabel "Throughput (Mop/s)"

set grid ytics mytics  # draw lines for each ytics and mytics
set mytics 2           # set the spacing for the mytics
set grid               # enable the grid

set size 0.5, 0.5
set origin 0, 0.5
set xlabel "(a) Read"
plot './dataset/dram_indexes.dat' using 1:2 title "FPTree" with linespoints linestyle 7 linewidth 1.4 linecolor rgb '#3b518b', \
